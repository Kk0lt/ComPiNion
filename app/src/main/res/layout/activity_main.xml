<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivBottomShape"
        android:layout_width="446dp"
        android:layout_height="319dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMerit"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/transparentwave" />

    <ImageView
        android:id="@+id/ivCharacterBg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBottomShape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
        app:layout_constraintVertical_bias="0.076"
        app:srcCompat="@drawable/purpleborder" />

    <ImageView
        android:id="@+id/ivCharacter"
        android:layout_width="124dp"
        android:layout_height="128dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
        app:layout_constraintVertical_bias="0.131"
        app:srcCompat="@drawable/sus" />

    <TextView
        android:id="@+id/txtCharacter"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:background="@drawable/bg_purple_radius"
        android:fontFamily="@font/lexend"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Nom Du Perso"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <TextView
        android:id="@+id/txtLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/lexend"
        android:foregroundGravity="center"
        android:text="Niveau X"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtXP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCharacter" />

    <TextView
        android:id="@+id/txtMerit"
        android:layout_width="135dp"
        android:layout_height="26dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="3"
        android:fontFamily="@font/lexend"
        android:text="Merite points:"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/xpBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xpBar" />

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/purpleborder"
        android:fontFamily="@font/lexend"
        android:foregroundGravity="center"
        android:text="Dark Mode"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/btnSmoked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/lexend"
        android:foregroundGravity="center"
        android:text="@string/smoked"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:textAlignment="center"
        android:weightSum="4"
        app:layout_constraintBottom_toTopOf="@+id/btnSmoked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMerit">

        <Button
            android:id="@+id/btnNoSmoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/lexend"
            android:text="@string/notSmoked"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnThought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="2"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/lexend"
            android:text="@string/thought"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/xpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtMerit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtXP" />

    <ProgressBar
        android:id="@+id/xpBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMerit" />

    <TextView
        android:id="@+id/txtXP"
        android:layout_width="107dp"
        android:layout_height="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/lexend"
        android:text="Experience:"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/xpBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLevel" />

    <ImageView
        android:id="@+id/ivUpCorner"
        android:layout_width="167dp"
        android:layout_height="121dp"
        android:rotation="180"
        android:scaleType="matrix"
        app:layout_constraintEnd_toStartOf="@+id/darkModeSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/purplecircle" />

    <ImageView
        android:id="@+id/ivLog"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_marginTop="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivHome"
        app:layout_constraintTop_toTopOf="@+id/ivBottomShape"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_calendar_month_24" />

    <ImageView
        android:id="@+id/ivSocial"
        android:layout_width="39dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivHome"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBottomShape"
        app:layout_constraintVertical_bias="0.969"
        app:srcCompat="@drawable/baseline_group_24" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="62dp"
        android:layout_height="51dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomShape"
        app:srcCompat="@drawable/baseline_gamepad_24" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginBottom="9dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/darkModeSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_menu_24" />

</androidx.constraintlayout.widget.ConstraintLayout>