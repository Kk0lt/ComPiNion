<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightTurquoise"
    tools:context=".LimitselectionActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:scaleType="fitStart"
        android:src="@tools:sample/avatars"
        android:tint="@color/turquoise"
        android:tintMode="src_in"
        app:srcCompat="@drawable/halfcircle" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_gravity="bottom|left"
        android:rotation="180"
        android:scaleType="fitStart"
        android:src="@tools:sample/avatars"
        android:tint="@color/turquoise"
        android:tintMode="src_in"
        app:srcCompat="@drawable/halfcircle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/lexend"
            android:text="@string/select"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@tools:sample/avatars"
                android:tint="@color/turquoise"
                app:srcCompat="@drawable/ic_1" />

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@tools:sample/avatars"
                android:tint="@color/turquoise"
                app:srcCompat="@drawable/ic_2" />

            <ImageView
                android:id="@+id/ivIcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@tools:sample/avatars"
                android:tint="@color/turquoise"
                app:srcCompat="@drawable/ic_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

</FrameLayout>