<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:layout_editor_absoluteX="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangleborder"
            android:foregroundTintMode="src_over"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCompanionImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sus" />

            <Button
                android:id="@+id/btAmis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/hardBlue"
                android:text="Suivre"
                android:textColor="@color/white"
                app:icon="@drawable/ic_amis"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/red"
                android:text="Bloquer"
                app:icon="@drawable/ic_block"
                app:iconGravity="textStart"
                app:iconSize="24dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>