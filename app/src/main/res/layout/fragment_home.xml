<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/allStats_layout"
        android:layout_width="378dp"
        android:layout_height="559dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtCharacter"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_purple_radius"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="Nom Du Perso"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.121" />

        <ImageView
            android:id="@+id/ivCharacter"
            android:layout_width="148dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/purpleborder"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
            app:layout_constraintVertical_bias="0.131"
            app:srcCompat="@drawable/sus" />

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/lexend"
            android:foregroundGravity="center"
            android:text="Niveau X"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtXP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCharacter" />

        <LinearLayout
            android:id="@+id/stats_layout"
            android:layout_width="183dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMerit"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="3"
                android:fontFamily="@font/lexend"
                android:text="Merite points:"
                android:textColor="@color/purple"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/xpBar2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.558"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/xpBar" />

            <ProgressBar
                android:id="@+id/xpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="3"
                app:layout_constraintBottom_toTopOf="@+id/txtMerit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtXP" />

            <TextView
                android:id="@+id/txtXP"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="3"
                android:fontFamily="@font/lexend"
                android:text="Experience:"
                android:textColor="@color/purple"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/xpBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLevel" />

            <ProgressBar
                android:id="@+id/xpBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="3"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMerit" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivUpCorner"
        android:layout_width="167dp"
        android:layout_height="121dp"
        android:layout_gravity="top|left"
        android:rotation="180"
        android:scaleType="matrix"
        app:layout_constraintEnd_toStartOf="@+id/darkModeSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/purplecircle" />

    <ImageView
        android:id="@+id/iv_hamburger"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/darkModeSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_hamburger" />

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/purpleborder"
        android:fontFamily="@font/lexend"
        android:text="Dark Mode"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="393dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:textAlignment="center"
            android:weightSum="4"
            app:layout_constraintBottom_toTopOf="@+id/btnSmoked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtMerit">

            <Button
                android:id="@+id/btnNoSmoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/purple"
                android:fontFamily="@font/lexend"
                android:text="@string/notSmoked"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnThought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_weight="2"
                android:backgroundTint="@color/purple"
                android:fontFamily="@font/lexend"
                android:text="@string/thought"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSmoked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/lexend"
            android:foregroundGravity="center"
            android:text="@string/smoked"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </LinearLayout>

</FrameLayout>