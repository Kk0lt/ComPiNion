<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/purple"/> <!-- Change to your desired color -->
            <corners android:radius="20dp"/> <!-- Optional: Add rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default color when not selected -->
        </shape>
    </item>
</selector>